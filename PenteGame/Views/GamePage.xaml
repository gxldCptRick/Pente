<Page x:Class="PenteGame.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PenteGame.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="GamePage"  >
    <Grid x:Name="grid" Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Name="size" Height=".8*"/>
            <RowDefinition Height=".05*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Name="BoardGrid">
            <Canvas Name="PieceGrid"/>
            <UniformGrid  Name="GameGrid" Columns="19" Rows="19" Height="{Binding ActualHeight, ElementName=BoardGrid, Mode=OneWay}" Width="{Binding ActualHeight, ElementName=BoardGrid, Mode=OneWay}" />
        </Grid>
    </Grid>
</Page>
