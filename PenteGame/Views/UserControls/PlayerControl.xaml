<UserControl x:Class="PenteGame.Views.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PenteGame.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Name Of Player" FontSize="49" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".9*"/>
                    <ColumnDefinition Width=".4*"/>
                </Grid.ColumnDefinitions>
                <Label FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Kill Count:" Foreground="MediumPurple"/>
                <Label Foreground="MediumPurple" FontSize="35" Grid.Column="1" Margin="5" Content="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Grid>
            <Image Grid.Column="1" Source="/Resources/PurplePiece.png"/>
        </Grid>
    </Grid>
</UserControl>
